<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unisa.guardianhouse.fragments.activities.activity.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <LinearLayout
            android:id="@+id/home_buttons1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_drawer"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="drawer" />

            <Button
                android:id="@+id/button_account"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="@string/button_account" />

            <Button
                android:id="@+id/button_get_users"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="@string/button_get_users" />

            <Button
                android:id="@+id/button_apartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showApartment"
                android:text="@string/button_apartment" />

            <Button
                android:id="@+id/button_search"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="CERCA APPARTAMENTO" />

            <Button
                android:id="@+id/button_review"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="@string/button_review" />

            <Button
                android:id="@+id/button_map"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="GOOGLE MAPS API TEST" />

            <Button
                android:id="@+id/button_logout"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/button_logout" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>