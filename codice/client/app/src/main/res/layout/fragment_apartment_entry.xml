<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unisa.guardianhouse.activities.ApartmentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imgViewPhoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/image_viewer_placeholder"
                />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:background="#A7000000"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_alignBottom="@+id/imgViewPhoto">

                <TextView
                    android:id="@+id/insertPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/insert_text"
                    android:textColor="@color/bianco"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/insert_text"
                    android:textColor="@color/bianco"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >


                        <TextView
                            android:id="@+id/tvRatingBarInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/insert_text"
                            android:textColor="@color/bianco"
                            android:textSize="14sp" />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/apartment_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear1"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:showDividers="middle"
                android:weightSum="1">

                <!-- Rating Bar -->
                <RelativeLayout
                    android:id="@+id/relative_ratingbar"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true"
                    android:layout_weight="2.47">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    style="?android:attr/ratingBarStyle"
                    android:isIndicator="true"
                    android:layout_marginLeft="5dp"
                    android:minHeight="18dp" />

                </RelativeLayout>

                <!-- Dimensione -->

                <RelativeLayout
                    android:id="@+id/relative_dimension"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/dimension_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="18dp"
                        android:text="@string/apartment_dimension_label"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dimension_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dimension_label"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/insert_text" />



                </RelativeLayout>

                <!-- Status -->

                <RelativeLayout
                    android:id="@+id/relative_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/status_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="18dp"
                        android:text="@string/apartment_status_label"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/status_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/status_label"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/insert_text" />



                </RelativeLayout>

                <!-- Prezzo -->

                <RelativeLayout
                    android:id="@+id/relative_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/price_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="18dp"
                        android:text="@string/apartment_price_label"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/price_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/price_label"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/insert_text" />



                </RelativeLayout>

                <!-- Descrizione -->

                <RelativeLayout
                    android:id="@+id/relative_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/description_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="18dp"
                        android:text="@string/apartment_text_label"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/text_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/description_label"
                        android:layout_toLeftOf="@+id/pendescr"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/insert_text" />



                </RelativeLayout>

                <!-- Posizione -->

                <RelativeLayout
                    android:id="@+id/relative_position"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/position_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="18dp"
                        android:text="@string/apartment_position_label"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/position_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/position_label"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/insert_text" />



                </RelativeLayout>

                <!-- Punti d'interesse-->

                <RelativeLayout
                    android:id="@+id/relative_poi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/poi_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="18dp"
                        android:text="@string/apartment_poi_label"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/poi_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/poi_label"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/insert_text" />


                </RelativeLayout>

                <!-- Capacità Termica-->

                <RelativeLayout
                    android:id="@+id/relative_thermic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/thermic_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="18dp"
                        android:text="@string/apartment_thermic_label"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/thermic_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thermic_label"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/insert_text" />



                </RelativeLayout>

                <!-- Servizi Standard -->

                <RelativeLayout
                    android:id="@+id/relative_services"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/service_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="18dp"
                        android:text="@string/apartment_services_label"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/service_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/service_label"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/insert_text" />



                </RelativeLayout>

                <!-- TEST -->

                <RelativeLayout
                    android:id="@+id/relative_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/letizia_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="18dp"
                        android:text="@string/apartment_letizia_label"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/letizia_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/letizia_label"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/apartment_letizia" />



                </RelativeLayout>


            </LinearLayout>

            <View
                android:id="@+id/separator_line_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/apartment_data"
                android:background="#dfdfdf" />

            <Button
                android:id="@+id/button_delete_apartment"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_line_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"

                android:text="@string/button_save_apartment" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>