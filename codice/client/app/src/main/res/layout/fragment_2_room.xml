                    android:text="@string/less"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/integer_free_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="45dp"
