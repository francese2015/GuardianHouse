<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unisa.guardianhouse.activities.ApartmentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/imgViewPhoto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:text="@string/fragment_room_desc"
                android:textColor="@color/Gray"
                android:textSize="24sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:id="@+id/apartment_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgViewPhoto"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:showDividers="middle"
                android:weightSum="1">

            <!-- Number of Guests -->

                <TextView
                    android:id="@+id/dimension_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#2196F3"
                    android:textSize="20dp"
                    android:text="@string/max_guests"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:gravity="center">


                    <Button
                        android:id="@+id/button_delete_apartment"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:text="@string/less"
                        android:textSize="20sp"
                        android:layout_row="0"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/insertPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/zero_integer"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="1" />


                    <Button
                        android:id="@+id/button_delete_apartment"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/plus"
                        android:textSize="20sp"
                        android:layout_row="0"
                        android:layout_column="6" />


                </GridLayout>

                <!-- Room Numbers -->
                <TextView
                    android:id="@+id/dimension_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#2196F3"
                    android:textSize="20dp"
                    android:text="@string/room_number"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:gravity="center">


                    <Button
                        android:id="@+id/button_delete_apartment"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:text="@string/less"
                        android:textSize="20sp"
                        android:layout_row="0"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/insertPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/zero_integer"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="1" />


                    <Button
                        android:id="@+id/button_delete_apartment"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/plus"
                        android:textSize="20sp"
                        android:layout_row="0"
                        android:layout_column="6" />


                </GridLayout>

            <!-- Bed -->

                <TextView
                    android:id="@+id/dimension_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#2196F3"
                    android:textSize="20dp"
                    android:text="@string/bed"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:gravity="center">


                    <Button
                        android:id="@+id/button_delete_apartment"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:text="@string/less"
                        android:textSize="20sp"
                        android:layout_row="0"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/insertPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/zero_integer"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="1" />


                    <Button
                        android:id="@+id/button_delete_apartment"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/plus"
                        android:textSize="20sp"
                        android:layout_row="0"
                        android:layout_column="6" />


                </GridLayout>

                <!-- WC -->

                <TextView
                    android:id="@+id/dimension_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#2196F3"
                    android:textSize="20dp"
                    android:text="@string/wc_number"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:gravity="center">


                    <Button
                        android:id="@+id/button_delete_apartment"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:text="@string/less"
                        android:textSize="20sp"
                        android:layout_row="0"
                        android:layout_column="0" />

                    <TextView
                        android:id="@+id/insertPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/zero_integer"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="1" />


                    <Button
                        android:id="@+id/button_delete_apartment"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="@string/plus"
                        android:textSize="20sp"
                        android:layout_row="0"
                        android:layout_column="6" />


                </GridLayout>


            </LinearLayout>

            <View
                android:id="@+id/separator_line_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/apartment_data"
                android:background="#dfdfdf" />

            <Button
                android:id="@+id/button_room"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_line_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"

                android:text="@string/next" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>