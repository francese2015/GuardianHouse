<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollView" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin">


    <ImageSwitcher
        android:id="@+id/imgViewPhoto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"

        />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom|start"
        android:background="#A7000000"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_alignBottom="@+id/imgViewPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/insertPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:text="@string/insert_photo"
        android:textColor="@color/bianco"
        android:textSize="20sp"
        android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout

        android:id="@+id/relative_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/layout_selector"
        android:clickable="false"
        android:layout_below="@+id/linear1">

            <TextView
                android:id="@+id/name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_name_label"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_below="@id/name_title"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_apartment_name"
                android:inputType="text" >
            </EditText>

        <ImageButton
            android:id="@+id/img_map"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_below="@id/name_title"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/ic_map" />

        </RelativeLayout>

            <TextView
                android:id="@+id/name_descr"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_address"
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_desc_label"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/descrip"
                android:layout_below="@id/name_descr"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_apartment_description"
                android:inputType="textMultiLine" >
            </EditText>

            <TextView
                android:id="@+id/name_mq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/descrip"
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_mq_label"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/meters"
                android:layout_below="@id/name_mq"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_apartment_mq"
                android:inputType="number" >
            </EditText>

            <TextView
                android:id="@+id/name_carspot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/meters"
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_spot_label"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/carspot"
                android:layout_below="@id/name_carspot"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_apartment_spot"
                android:inputType="number" >
            </EditText>

            <TextView
                android:id="@+id/name_durata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/carspot"
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_durata_contratto"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/durata"
                android:layout_below="@id/name_durata"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:hint="@string/insert_durata_contratto"
                android:inputType="number" >
            </EditText>

            <TextView
                android:id="@+id/conditions_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/durata"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_status_detail"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/conditions"
                android:layout_below="@id/conditions_label"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_status_detail"
                android:layout_marginLeft="5dp"
                android:inputType="text" >
            </EditText>

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/conditions"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="#1E88E5"
                materialdesign:rippleSpeed="50"
                android:text="@string/button_goto_scheda2" />



        </RelativeLayout>


    </ScrollView>

