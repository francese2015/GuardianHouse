<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="40dp"
            android:gravity="center"
            android:id="@+id/rel_apart">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/app_logo_big"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/insert_apartment"
                android:layout_centerHorizontal="true"
                android:textColor="@color/ColorPrimary"
                android:layout_below="@+id/logo"
                android:textSize="30dp"
                />

            <TextView
                android:id="@+id/name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="35dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_name_label"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_below="@id/name_title"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_apartment_name"
                android:inputType="text" >
            </EditText>

            <TextView
                android:id="@+id/name_descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="20dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_desc_label"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/descrip"
                android:layout_below="@id/name_descr"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_apartment_description"
                android:inputType="textMultiLine" >
            </EditText>

            <TextView
                android:id="@+id/name_mq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descrip"
                android:layout_marginTop="20dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_mq_label"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/meters"
                android:layout_below="@id/name_mq"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_apartment_mq"
                android:inputType="number" >
            </EditText>

            <TextView
                android:id="@+id/name_carspot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meters"
                android:layout_marginTop="20dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_spot_label"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/carspot"
                android:layout_below="@id/name_carspot"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_apartment_spot"
                android:inputType="text" >
            </EditText>

            <TextView
                android:id="@+id/name_durata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carspot"
                android:layout_marginTop="20dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_durata_contratto"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/durata"
                android:layout_below="@id/name_durata"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_durata_contratto"
                android:inputType="text" >
            </EditText>

            <TextView
                android:id="@+id/name_stanze_libere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/durata"
                android:layout_marginTop="20dp"
                android:textColor="#2196F3"
                android:textSize="18dp"
                android:text="@string/apartment_status_detail"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/stanze_libere"
                android:layout_below="@id/name_stanze_libere"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_status_detail"
                android:inputType="text" >
            </EditText>

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stanze_libere"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="#1E88E5"
                materialdesign:rippleSpeed="50"
                android:text="@string/button_goto_scheda2" />



        </RelativeLayout>


    </ScrollView>

