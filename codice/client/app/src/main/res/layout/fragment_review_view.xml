<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unisa.guardianhouse.fragments.ReviewFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/apt02"/>

            <RelativeLayout
                android:id="@+id/relative_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_below="@id/imgView"
                android:background="@drawable/layout_selector"
                android:gravity="center">


                <TextView
                    android:id="@+id/address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/address_label"
                    android:textColor="#2196F3"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address_label"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/apartment_address" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/review_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relative_address"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >


                <TextView
                    android:id="@+id/txtReview"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/lorem_ipsum"
                    android:maxLines="5"

                    android:textSize="18sp" >

                </TextView>

            </LinearLayout>


            <View
                android:id="@+id/separator_line_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="#dfdfdf" />

            <LinearLayout
                android:id="@+id/apartment_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/review_content"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:showDividers="middle">

                <!-- Elettrodomestici -->

                <RelativeLayout

                    android:id="@+id/relative_dimension"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/layout_selector"
                    android:clickable="false">



                    <TextView
                        android:id="@+id/forniture_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/furniture"
                        android:textColor="#2196F3"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_quality"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/edit_icon"
                        android:src="@mipmap/ic_action_storage" />

                    <RatingBar
                        android:id="@+id/ratingBar1"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:progressDrawable="@drawable/custom_ratingbar_selector"
                        android:layout_marginTop="50dp"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:longClickable="false"
                        android:numStars="5"
                        android:rating="4" />

                </RelativeLayout>

                <!-- Capacità Termica-->

                <RelativeLayout

                    android:id="@+id/relative_dimension1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="false">



                    <TextView
                        android:id="@+id/dimension_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/thermic_capacity"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/img_quality1"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/edit_icon"
                        android:src="@mipmap/ic_action_bightness_low" />

                    <RatingBar
                        android:id="@+id/ratingBar2"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:progressDrawable="@drawable/custom_ratingbar_selector"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:longClickable="false"
                        android:numStars="5"
                        android:rating="4" />

                </RelativeLayout>


                <!-- Onestà Padrone di Casa -->

                <RelativeLayout

                    android:id="@+id/relative_dimension2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="false">



                    <TextView
                        android:id="@+id/honesty_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/landlord_honesty"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/img_honesty"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_action_cc_bcc" />

                    <RatingBar
                        android:id="@+id/ratingBar4"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:progressDrawable="@drawable/custom_ratingbar_selector"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:longClickable="false"
                        android:numStars="5"
                        android:rating="4" />

                </RelativeLayout>


                <!-- Sicurezza Casa -->

                <RelativeLayout

                    android:id="@+id/relative_dimension3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="false">



                    <TextView
                        android:id="@+id/secure_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/house_security"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/img_security"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_action_secure" />

                    <RatingBar
                        android:id="@+id/ratingBar3"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_centerHorizontal="true"
                        android:progressDrawable="@drawable/custom_ratingbar_selector"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:longClickable="false"
                        android:numStars="5"
                        android:rating="4" />

                </RelativeLayout>


                <!-- Durata Contratto -->

                <TextView
                    android:id="@+id/contract_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:text="@string/contract_duration_hint"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/integer_guests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/zero_integer"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="1" />





                </GridLayout>

                <!-- Mezzi Di Trasporto -->

                <RelativeLayout

                    android:id="@+id/relative_dimension4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="false"
                    android:layout_marginTop="20dp">



                    <TextView
                        android:id="@+id/bus_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/bus_vote"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/img_security"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_bus_grey600_18dp" />

                    <RatingBar
                        android:id="@+id/ratingBar3"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_centerHorizontal="true"
                        android:progressDrawable="@drawable/custom_ratingbar_selector"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:longClickable="false"
                        android:numStars="5"
                        android:rating="4" />

                </RelativeLayout>


                <!-- Rapporto con i Vicini -->

                <RelativeLayout

                    android:id="@+id/relative_dimension5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="false"
                    android:layout_marginTop="20dp">



                    <TextView
                        android:id="@+id/neighbours_vote_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/vote_neighbours"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/img_security"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_user" />

                    <RatingBar
                        android:id="@+id/ratingBar3"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:progressDrawable="@drawable/custom_ratingbar_selector"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:longClickable="false"
                        android:numStars="5"
                        android:rating="4" />

                </RelativeLayout>


            </LinearLayout>

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/button_to_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apartment_data"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="#1E88E5"
                materialdesign:rippleSpeed="50"
                android:text="@string/go_back" />


        </RelativeLayout>



    </ScrollView>

</ScrollView>
