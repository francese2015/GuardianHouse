<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unisa.guardianhouse.activities.ApartmentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imgViewPhoto"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/image_viewer_placeholder"
                />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom|start"
                android:background="#A7000000"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_alignBottom="@+id/imgViewPhoto"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/insertPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/insert_photo"
                    android:textColor="@color/bianco"
                    android:textSize="20sp"
                    android:textStyle="bold" />
<!--
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_counter"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right" />
-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >



                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/apartment_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear1"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:showDividers="middle"
                android:weightSum="1">




                <!-- Titolo -->

                <RelativeLayout
                    android:id="@+id/relative_dimension"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/dimension_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="20dp"
                        android:text="@string/title"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/nameApt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dimension_label"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/title_description_fragment3"
                        android:inputType="text"
                        android:textColor="@color/DarkGray"
                        />
                </RelativeLayout>

                <!-- Status -->

                <RelativeLayout
                    android:id="@+id/relative_dimension"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layout_selector"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/dimension_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="#2196F3"
                        android:textSize="20dp"
                        android:text="@string/description"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/txtReview"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:layout_below="@+id/dimension_label"
                        android:background="@drawable/textbox_bg_review"
                        android:ems="10"
                        android:gravity="top|left"
                        android:hint="@string/description_hint_fragment3"
                        android:maxLines="7"
                        android:textSize="18sp" >

                    </EditText>


                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/separator_line_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/apartment_data"
                android:background="#dfdfdf" />

            <Button
                android:id="@+id/button_photo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator_line_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"

                android:text="@string/next" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>